{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "migrate.ts",
    "src/server.ts",
    "src/shared/config/**/*.ts",
    "src/shared/filters/**/*.ts",
    "src/shared/errors/**/*.ts",
    "src/shared/middlewares/**/*.ts",
    "migrations/**/*.ts",
    "src/modules/common/models/**/*.ts",
    "src/modules/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "assets"
  ]
}
